#ifndef CLIENTE_H
#define CLIENTE_H

#include <string>
#include <set>
#include <map>

#include "usuario.h"
#include "datatypes.h"
#include "observer.h"

using namespace std;

class Cliente : public Usuario, public IObserver
{
private:
  string direccion;
  string ciudad;
  set <DTNotificaciones> notificaciones;

public:
  crearCompra();
  agregarSuscripcion();
  eliminarNotifiaciones();
  notificar(String nVen, String nProm, set <DTProducto>);
  DTUsuario getDatos();

  virtual ~Cliente();
};

#endif